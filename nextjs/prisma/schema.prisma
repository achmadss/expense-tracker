generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id            String   @id @default(uuid())
  messageId     String?
  userId        String
  userTag       String
  text          String
  imageUrls     String[]
  channelId     String?
  isDm          Boolean  @default(false)
  ocrText       String?
  extractedData String?
  status        ExpenseStatus @default(unprocessed)
  timestamp     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum ExpenseStatus {
  unprocessed
  processing
  completed
  failed
}
